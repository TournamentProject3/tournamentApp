<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.irem.tournament.Login">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/btn_login_bg"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin">


            <TextView
                android:id="@+id/txtViewElMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/elm_info"
                android:textColorHint="@android:color/black" />



            <TextView
                android:id="@+id/txtViewGroupMode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/group_info"
                android:textColorHint="@android:color/black" />


            <TextView
                android:id="@+id/txtViewLigMode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/lig_info"
                android:textColorHint="@android:color/black" />

            <TextView
                android:id="@+id/txtViewRealMode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/real_info"
                android:textColorHint="@android:color/black" />








    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>